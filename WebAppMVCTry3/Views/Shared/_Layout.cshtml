<!DOCTYPE html>
<html lang="sv-se">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script defer scr="hrrps:/kit.frontawesome.com/41c8b474e2.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/scss/site.min.css" asp-append-version="true" />
    <title>@ViewData["Title"] - WebAppMVCTry3</title>
</head>
<body> 

    <div class="wrapper">
    <header>
        <div class="container">
            <a id="logo" asp-controller="Home" asp-action="Index"><img src="~/images/light-logo-slicon.svg" alt=""></a>

            <div id="meun">
                <nav>
                    <a class="menu-link" href="#showcase">Overview </a>
                    <a class="menu-link" href="#features">Features </a>
                    <a class="menu-link" asp-controller="Contact" asp-action="Index">Contact </a>
                </nav>
            </div>

            <div class="btn-switch">
                <label>Light</label>
                <label class="switch" for="switch-mode">
                    <input type="checkbox" id="switch-mode" />
                    <span class="slider round"></span>
                </label>
                <label>Dark</label>
            </div>

            <div class="account-buttons" class="hide">
                    <a asp-controller="Auth" asp-action="SignIn" class="btn-theme"><i class="fa-regular fa-right-to-backet"></i><span>Sign In</span></a>                
                    <a asp-controller="Auth" asp-action="SignUp" class="btn-theme"><i class="fa-regular fa-user"></i><span>Sign Up</span></a>
            </div>

        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
            <div class="container">
                <div class="social-media">
                    <a class="btn-social" href="#"><i class="bi bi-facebook"></i></a>
                    <a class="btn-social" href="#"><i class="fa-bands fa-square-x-twitter"></i></a>
                    <a class="btn-social" href="#"><i class="fa-bands fa-instagram"></i></a>
                    <a class="btn-social" href="#"><i class="fa-bands fa-youtube"></i></a>
                </div>
                <p>&copy; 2024 Silicon. All Rights reserved. Text text</p>
            </div>
    </footer>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>

                